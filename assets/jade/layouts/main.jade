    body

        #bs-wrap
            article.bs-grid.clearfix
                block content
        
        block bottom
        
        // build:script inline main 
        script(src='scripts/main.js')
        // /build 
        script.
            (function ($) {
                $(window).load(function() {
                    var media_check = window.matchMedia('(min-width: 768px)'),
                        previous = null;
                    function getWidth(mq) {
                        var grid = $('.bs-grid');
                        if (mq.matches !== previous) {
                            previous = mq.matches;
                            if(mq.matches) {
                                grid.isotope();
                            } else if (grid.hasClass('isotope')) {
                                grid.isotope('destroy');
                            }
                        }
                    }
                    getWidth(media_check);
                    media_check.addListener(getWidth);
                    $('.bs-tooptips').tooltip();
                    $('.bs-popover').popover();
                });
            }(jQuery));

