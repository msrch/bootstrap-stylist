html(lang='en')

    head
        meta(charset='utf-8')
        title Bootstrap Stylist
        meta(name='viewport', content='width=device-width, initial-scale=1.0')
        meta(name='description', content='Bootstrap Stylist - helps you to re-skin Twitter Bootstrap.')
        meta(name='author', content='Michal Srch')
        // build:style inline main 
        link(href='styles/main.css', rel='stylesheet')
        // /build 
        // build:script inline html5shiv 
        //if lt IE 9
            script(src='scripts/html5shiv.js')
